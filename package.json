{
  "name": "gutenberg-inline",
  "version": "1.0.0",
  "description": "A modern WordPress plugin for inline Gutenberg block editing with React Shadow DOM architecture and complete ShadCN design system",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && vite build && npm run build:gutenberg && npm run test",
    "build:css": "node build-css.js",
    "build:gutenberg": "vite build --config vite.config.gutenberg.js",
    "build:watch": "vite build --watch",
    "build:watch:gutenberg": "vite build --watch --config vite.config.gutenberg.js",
    "dev:gutenberg": "vite --config vite.config.gutenberg.js",
    "preview": "vite preview",
    "test": "node tests/run-all-tests.js",
    "test:build": "node tests/build-validation.js",
    "test:components": "node tests/component-tests.js",
    "test:integration": "node tests/integration-tests.js"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "react",
    "shadow-dom",
    "gutenberg",
    "inline-editing",
    "block-editor"
  ],
  "author": "Your Name",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "terser": "^5.43.1",
    "vite": "^5.1.0"
  },
  "dependencies": {
    "@r2wc/react-to-web-component": "^2.0.3",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.1.11",
    "ace-builds": "^1.32.8",
    "framer-motion": "^11.0.3",
    "react": "^18.2.0",
    "react-ace": "^10.1.0",
    "react-customize-token-input": "^2.6.3",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.6"
  }
}
